{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs ": 3
      }
    ],
    ["@emotion"],
    [
      "babel-plugin-root-import"
    ],
    [
      "module-resolver",
      {
        "root": [
          "./tests",
          "./src"
        ],
        "alias": {
          "underscore": "lodash"
        }
      }
    ]
  ],
  "sourceMaps": "both"
}
